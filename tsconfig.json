{
  "exclude": ["tests/**"],
  "compilerOptions": {
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    // Modules
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ESNext",

    // Emit
    "noEmit": true,

    // JavaScript Support
    "allowJs": true,
    "checkJs": true,

    // allowSyntheticDefaultImports
    "allowSyntheticDefaultImports": true,

    // Completeness
    "skipLibCheck": true
  }
}
